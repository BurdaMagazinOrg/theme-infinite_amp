{% if content %}
<div class="item-media item-media--nexx-video">
    {{ attach_library('amp/amp.iframe') }}
    <amp-iframe
        width="940"
        height="528"
        src="https://embed.nexx.cloud/{{ omnia_id }}/{{ media.field_video.hash }}?amp=1"
        frameborder="0"
        sandbox="allow-scripts allow-same-origin allow-popups"
        layout="responsive"
        allowfullscreen>
        {{ image_style(media.field_preview_image.entity.field_image, 'landscape_l', {layout: 'fill'}) }}
    </amp-iframe>
    <div class="caption">
        {% if not media.field_copyright.isEmpty()  %}
            <div class="text-copyright">{{ content.field_copyright }}</div>
        {% endif %}
        {% if not media.field_description.isEmpty() %}
            <div class="text-description">{{ content.field_description }}</div>
        {% endif %}
    </div>
</div>
{% endif %}
