{% set share_url = absolute_node_url ~ "?utm_medium=social&utm_campaign=Sharing&utm_source=" %}

{% set attributes = attributes.setAttribute("itemprop", "image") %}
{% set attributes = attributes.setAttribute("itemscope", "") %}
{% set attributes = attributes.setAttribute("itemtype", "https://schema.org/ImageObject") %}

<div{{ attributes.addClass('item-media item-media--image') }}>
    {% if content %}
        {{ content.field_image }}

        <div class="caption">
            {% block copyright_source_block %}
                {% if content.field_copyright | plain_text or content.field_source | plain_text %}
                    <div class="text-copyright">
                        {% if content.field_copyright | plain_text %}
                            <span>{{ content.field_copyright }}</span>
                        {% endif %}
                        {% if content.field_source | plain_text %}
                            <span>{{ content.field_source }}</span>
                        {% endif %}
                    </div>
                {% endif %}
            {% endblock %}

            {% if content.field_description %}
                <div class="text-description">
                    {{ content.field_description }}
                </div>
            {% endif %}

            {% block socials_block %}
                <div class="socials socials-bar">
                    <amp-social-share width="32" height="32" class="item-social icon-facebook" type="facebook"
                                      data-param-href="{{ share_url ~ "Sharing_Facebook" }}"
                                      data-param-app_id="{{ fb_app_id }}"></amp-social-share>

                    <amp-social-share width="32" height="32" class="item-social icon-pinterest" type="pinterest"
                                      data-param-url="{{ (share_url ~ "Sharing_Pinterest") | e('html_attr') }}"
                                      data-param-media="{{ share_img_url | e('html_attr') }}"
                                      data-param-description="{{ content.field_description | plain_text | e('html_attr') }}"></amp-social-share>
                </div>
            {% endblock %}
        </div>
    {% endif %}
</div>