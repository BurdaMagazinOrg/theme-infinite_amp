{# Process label to be plain_text and trimmed always #}
{% set label = label|plain_text|trim %}
{% set whatsapp_share_text = whatsapp_share_text|plain_text|trim %}

{% block social_facebook %}
    <amp-social-share width="32" height="32" class="item-social icon-facebook" type="facebook"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-app_id="{{ fb_app_id }}"></amp-social-share>

{% endblock %}
{% block social_whatsapp %}
    <amp-social-share width="32" height="32"
                      class="item-social icon-whatsapp"
                      type="whatsapp"
                      data-share-endpoint="whatsapp://send"
                      data-param-text="{{ (whatsapp_share_text ~ label ~ ' - ' ~ url) | e('url') }}">
    </amp-social-share>
{% endblock %}

{% block social_pinterest %}
    <amp-social-share width="32" height="32" class="item-social icon-pinterest" type="pinterest"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-media="{{ share_img_url | e('html_attr') }}"
                      data-param-description="{{ label | e('html_attr') }}"></amp-social-share>
{% endblock %}

{% block social_twitter %}
    <amp-social-share width="32" height="32" class="item-social icon-twitter" type="twitter"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-text="{{ label | e('url') ~ '&url=' ~ url ~ '&via=' ~ twitter_share_via | e('url') }}"></amp-social-share>
{% endblock %}

{% block social_email %}
    <amp-social-share width="32" height="32" class="item-social icon-email"
                      data-param-body="{{ email_share_text | e('html_attr') }}"
                      data-param-subject="{{ email_subject | e('html_attr') }}"
                      type="email"></amp-social-share>
{% endblock %}