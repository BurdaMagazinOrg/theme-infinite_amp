{# Process label to be plain_text and trimmed always #}
{% set label = label|plain_text|trim %}
{% set whatsapp_share_text = whatsapp_share_text|plain_text|trim %}
{% set socials_size = socials_size|default(32) %}

{% block social_facebook %}
    <amp-social-share width="{{ socials_size }}" height="{{ socials_size }}" class="item-social icon-facebook"
                      type="facebook"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-app_id="{{ fb_app_id }}">

        {% if facebook_share_button %}
            <span>{{ facebook_share_button }}</span>
        {% endif %}

    </amp-social-share>

{% endblock %}
{% block social_whatsapp %}
    <amp-social-share width="{{ socials_size }}" height="{{ socials_size }}"
                      class="item-social icon-whatsapp"
                      type="whatsapp"
                      data-share-endpoint="whatsapp://send"
                      data-param-text="{{ (whatsapp_share_text ~ label ~ ' - ' ~ url) | e('url') }}">
        {% if whatsapp_share_button %}
            <span>{{ whatsapp_share_button }}</span>
        {% endif %}

    </amp-social-share>
{% endblock %}

{% block social_pinterest %}
    <amp-social-share width="{{ socials_size }}" height="{{ socials_size }}" class="item-social icon-pinterest"
                      type="pinterest"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-media="{{ share_img_url | e('html_attr') }}"
                      data-param-description="{{ label | e('html_attr') }}">

        {% if pinterest_share_button %}
            <span>{{ pinterest_share_button }}</span>
        {% endif %}

    </amp-social-share>
{% endblock %}

{% block social_twitter %}
    <amp-social-share width="{{ socials_size }}" height="{{ socials_size }}" class="item-social icon-twitter"
                      type="twitter"
                      data-param-url="{{ url | e('html_attr') }}"
                      data-param-text="{{ label | e('url') ~ '&url=' ~ url ~ '&via=' ~ twitter_share_via | e('url') }}">

        {% if twitter_share_button %}
            <span>{{ twitter_share_button }}</span>
        {% endif %}

    </amp-social-share>
{% endblock %}

{% block social_email %}
    <amp-social-share width="{{ socials_size }}" height="{{ socials_size }}" class="item-social icon-email"
                      data-param-body="{{ email_share_text | e('html_attr') }}"
                      data-param-subject="{{ email_subject | e('html_attr') }}"
                      type="email">

        {% if email_share_button %}
            <span>{{ email_share_button }}</span>
        {% endif %}

    </amp-social-share>
{% endblock %}